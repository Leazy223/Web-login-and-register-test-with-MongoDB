<form action="/auth/register" method="post" onsubmit="return checkPass();">
    <div>
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required id="">
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required id="email">
    </div>
    <div>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required id="password">
    </div>
    <div>
        <label for="confirm_password">Confirm Password:</label>
        <input type="password" id="confirm_password" name="confirm_password" required id="confirm_password">
    </div>
    <div>
        <button type="submit">Register</button>
    </div>
</form>